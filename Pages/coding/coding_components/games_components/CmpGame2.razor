                <!--CONTROLS SECTION-->
                <div class="row mx-auto">
                    <i class="py-3 mx-auto fa-3x far fa-keyboard"></i>
                </div>

                <div class="row mx-auto">
                    <p class="mx-auto text-center mb-0 p-2">
                        <u>Controls for this game as follows:</u>
                    </p>
                </div>

                <div class="row mx-auto mb-1">
                    <p class="mx-auto text-center mb-0 p-2">
                        <b>Menu Keys</b>
                    </p>
